<script type="text/javascript">var switchTo5x=false;</script>
<script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
<script type="text/javascript">stLight.options({publisher: "9562af31-8056-46cd-8148-4700ebcea8f0"}); </script>
<div id="blog_posts" class="eight columns">

			<div class="content">
				
				<h3 class="blog_title"><%= @post.title %></h3>

				<div class="date">
					<span class="day">
						<%= @post.created_at.strftime("%d") %>
					</span> 
					<span class="month">
						<%= @post.created_at.strftime("%b") %>
					</span>
				</div>

				<div class="post_info">
					Posted <%= time_ago_in_words(@post.created_at) %> ago // <i class="icon-comment"></i> <%= link_to("Permalink", post_path(@post, :anchor => "disqus_thread"))%> 
				</div>

				<div class="post">
					<% if @post.image? %>
						<%= link_to image_tag(@post.image.url(:small), :class => 'title_image'), @post %>
					<% end %>
					<div class="post_content">
						<%= raw @post.content %>
					</div>
					
					<div class="like-buttons">
						<span class="share_this">Share : </span>
						<span class='st_sharethis_large' displayText='ShareThis'></span>
						<span class='st_facebook_large' displayText='Facebook'></span>
						<span class='st_twitter_large' displayText='Tweet'></span>
						<span class='st_plusone_large' displayText='Google +1'></span>
						<span class='st_email_large' displayText='Email'></span>
					</div>

				</div>
				<br>
				<hr>
				<br>
				<%= raw(disqus_thread) %>
				<%= raw(disqus_comment_counts) %>

			</div>

</div>