<div id="blog_post" class="span8">

			<div class="post_wrapper">
				
				<h3 class="blog_title"><%= @post.title %></h3>

				<div class="post_info">
					Posted <%= time_ago_in_words(@post.created_at) %> ago in <span class="category">Movies</span> | <i class="icon-comment"></i> 10 comments 
				</div>

				<div class="post">
					<% unless @post.image.blank? %>
						<%= image_tag(@post.image, :class => 'title_image') %>
					<% end %>
					<div class="post_content">
						<%= raw @post.content %>
					</div>
				</div>

			</div>

</div>